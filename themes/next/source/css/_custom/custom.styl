// Custom styles.
body {
  width: 100%;
  height: 100%;
}
body,
.header
{
  background: none;
  background transparent;
}
.post {
  margin-bottom: 100px;
  padding: 25px;
  -webkit-box-shadow: 0 0 14px #cacbcb;
  -moz-box-shadow: 0 0 14px #cacbcc;
  background: #fff;
}
.site-author-image {
  border-radius: 50%;
}
td > p {
  margin: 0
}
 @media screen and (max-width: 767px) {
   .fork-me-on-github {
     display: none;
   }
 }
/*  作品页样式  */
.production {
  margin-top: 25px;
  padding: 25px;
  -webkit-box-shadow: 0 0 14px #cacbcb;
  -moz-box-shadow: 0 0 14px #cacbcc;
  background: #fff;
}
.production-item {
  font-size: 16px;
}
.production-item a {
  border: none;
}
